{% extends 'base.html.twig' %}

{% block title %}Art & Voyage{% endblock %}

{% block body %}
    <h1 class="text-center" style="color: green">Les statuts</h1>

    <table class="table">
        <thead>
            <tr>
                <th>NomStatut</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for statut in statuts %}
            <tr>
                <td>{{ statut.NomStatut }}</td>
                <td>
                    <a class="btn btn-primary" href="{{ path('app_statut_show', {'id': statut.id}) }}">voir</a>
                    <a class="btn btn-success" href="{{ path('app_statut_edit', {'id': statut.id}) }}">éditer</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">Vous avez encore rien ajouté</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a class="btn btn-secondary" href="{{ path('app_statut_new') }}">Créer un nouveau</a>
{% endblock %}
